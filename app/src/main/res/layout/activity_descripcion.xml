<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trabajo.juan.pokemon.Descripcion"
    android:background="@color/fondo"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="368dp"
        android:layout_height="250dp"
        android:background="@color/fondotarjeta"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_x="81dp"
                android:layout_y="48dp"
                android:text="Nombre:"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nombreTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="164dp"
                android:layout_y="49dp"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_x="80dp"
                android:layout_y="149dp"
                android:text="Tipo:"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="164dp"
                android:layout_y="149dp"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginTop="140dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="80dp"
                android:layout_y="114dp"
                android:text="Habilidad:"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/habilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_x="164dp"
                android:layout_y="114dp"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@android:color/background_dark"
                android:textSize="28sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
